{
    "name": "@squide/firefly",
    "author": "Workleap",
    "version": "15.0.0",
    "description": "Helpers to facilitate the creation of an application with the Squide firefly technology stack.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-squide.git",
        "directory": "packages/firefly"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true,
        "exports": {
            ".": {
                "types": "./dist/index.d.ts",
                "import": "./dist/index.js",
                "default": "./dist/index.js"
            }
        }
    },
    "exports": "./src/index.ts",
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "rslib build --config ./rslib.build.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@opentelemetry/api": "^1.9.0",
        "@tanstack/react-query": "^5.90.2",
        "msw": "^2.11.3",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "react-router": "^7.9.3"
    },
    "dependencies": {
        "@squide/core": "workspace:*",
        "@squide/module-federation": "workspace:*",
        "@squide/msw": "workspace:*",
        "@squide/react-router": "workspace:*",
        "@workleap-telemetry/core": "^1.0.1",
        "@workleap/logging": "^1.3.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@rsbuild/core": "1.5.13",
        "@rslib/core": "0.15.0",
        "@testing-library/react": "16.3.0",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.1",
        "@typescript-eslint/parser": "8.46.0",
        "@vitejs/plugin-react": "5.0.4",
        "@workleap/eslint-plugin": "3.5.0",
        "@workleap/rslib-configs": "1.1.0",
        "@workleap/typescript-configs": "3.0.4",
        "eslint": "8.57.0",
        "happy-dom": "19.0.2",
        "typescript": "5.9.3",
        "vitest": "3.2.4"
    },
    "sideEffects": false,
    "engines": {
        "node": ">=21.1.0"
    }
