{
    "name": "@squide/firefly-webpack-configs",
    "author": "Workleap",
    "version": "5.0.0",
    "description": "Webpack configuration helpers for the Squide firefly technology stack.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-squide.git",
        "directory": "packages/firefly-webpack-configs"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "dev": "rslib build --watch --config ./rslib.dev.ts",
        "build": "rslib build --config ./rslib.build.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@swc/core": "*",
        "@swc/helpers": "*",
        "@workleap/swc-configs": "*",
        "browserslist": "*",
        "postcss": "*",
        "webpack": ">=5.0.0",
        "webpack-dev-server": ">=5.0.0"
    },
    "dependencies": {
        "@module-federation/enhanced": "^0.10.0",
        "@types/node": "^22.13.10",
        "@types/semver": "^7.5.8",
        "@workleap/webpack-configs": "^1.5.3",
        "deepmerge": "^4.3.1",
        "html-webpack-plugin": "^5.6.3",
        "semver": "^7.7.1"
    },
    "devDependencies": {
        "@rsbuild/core": "1.2.19",
        "@rslib/core": "0.5.4",
        "@typescript-eslint/parser": "8.26.1",
        "@workleap/eslint-plugin": "3.3.0",
        "@workleap/rslib-configs": "1.0.2",
        "@workleap/typescript-configs": "3.0.2",
        "eslint": "8.57.0",
        "typescript": "5.8.2",
        "vitest": "3.0.8",
        "webpack": "5.98.0",
        "webpack-dev-server": "5.2.0"
    },
    "engines": {
        "node": ">=21.1.0"
    }
}
