{
    "name": "@squide/firefly-webpack-configs",
    "author": "Workleap",
    "version": "5.0.2",
    "description": "Webpack configuration helpers for the Squide firefly technology stack.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-squide.git",
        "directory": "packages/firefly-webpack-configs"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "dev": "rslib build --watch --config ./rslib.dev.ts",
        "build": "rslib build --config ./rslib.build.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@swc/core": "^1.11.13",
        "@swc/helpers": "^0.5.15",
        "@workleap/swc-configs": "^2.2.5",
        "browserslist": "^4.24.4",
        "postcss": "^8.5.3",
        "webpack": "^5.98.0",
        "webpack-dev-server": "^5.2.1"
    },
    "dependencies": {
        "@module-federation/enhanced": "^0.11.2",
        "@types/node": "^22.13.14",
        "@types/semver": "^7.7.0",
        "@workleap/webpack-configs": "^1.5.4",
        "deepmerge": "^4.3.1",
        "html-webpack-plugin": "^5.6.3",
        "semver": "^7.7.1"
    },
    "devDependencies": {
        "@rsbuild/core": "1.3.0",
        "@rslib/core": "0.6.0",
        "@typescript-eslint/parser": "8.28.0",
        "@workleap/eslint-plugin": "3.3.1",
        "@workleap/rslib-configs": "1.0.3",
        "@workleap/typescript-configs": "3.0.2",
        "eslint": "8.57.0",
        "typescript": "5.8.2",
        "vitest": "3.0.9",
        "webpack": "5.98.0",
        "webpack-dev-server": "5.2.1"
    },
    "engines": {
        "node": ">=21.1.0"
    }
