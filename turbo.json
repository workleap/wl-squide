{
    "$schema": "./node_modules/turbo/schema.json",
    "ui": "tui",
    "tasks": {
        "transit": {
            "dependsOn": ["^transit"],
            "outputs": []
        },
        "dev": {
            "dependsOn": ["@squide/firefly-rsbuild-configs#build", "@squide/firefly-webpack-configs#build"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/.env.local"],
            "env": ["USE_MSW", "ISOLATED", "NETLIFY", "LOGROCKET_APP_ID", "HONEYCOMB_API_KEY", "LAUNCH_DARKLY_CLIENT_ID"],
            "outputs": ["dist/**"]
        },
        "build-isolated": {
            "dependsOn": ["@squide/firefly-rsbuild-configs#build", "@squide/firefly-webpack-configs#build"],
            "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/.env.local"],
            "env": ["USE_MSW", "ISOLATED", "NETLIFY", "LOGROCKET_APP_ID", "HONEYCOMB_API_KEY", "LAUNCH_DARKLY_CLIENT_ID"],
            "outputs": ["dist/**"]
        },
        "serve-build": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "deploy": {
            "dependsOn": ["build"],
            "cache": false
        },
        "deploy-isolated": {
            "dependsOn": ["build-isolated"],
            "cache": false
        },
        "lint": {
            "dependsOn": ["eslint", "//#eslint", "typecheck", "//#typecheck", "//#syncpack"],
            "outputs": []
        },
        "//#eslint": {
            "inputs": ["$TURBO_DEFAULT$", "!packages", "!samples", "!docs", "!README.md", "!CONTRIBUTING.md"],
            "outputs": ["node_modules/.cache/eslint"]
        },
        "eslint": {
            "dependsOn": ["transit"],
            "inputs": ["$TURBO_DEFAULT$", "!README.md"],
            "outputs": ["node_modules/.cache/eslint"]
        },
        "//#typecheck": {
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "tsconfig.json", "!packages", "!samples", "!docs"],
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "typecheck": {
            "dependsOn": ["transit"],
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "tsconfig.json", "tsconfig.build.json"],
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "//#syncpack": {
            "inputs": [".syncpackrc.js", "package.json", "packages/**/package.json", "samples/**/package.json"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["transit"],
            "outputs": ["node_modules/.cache/vitest/**"]
        }
    }
}
