{
    "name": "@basic-webpack/host",
    "author": "Workleap",
    "version": "0.0.0",
    "description": "Host application to showcase Squide.",
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "scripts": {
        "dev": "webpack serve --config webpack.dev.js",
        "build": "pnpm build:webpack && pnpm build:copy-redirects",
        "build:webpack": "webpack --config webpack.build.js",
        "build:copy-redirects": "copyfiles _redirects dist",
        "build:copy-public-files": "copyfiles -u 1 public/favicon.png dist",
        "serve-build": "pnpm http-server dist -p 8086 -P http://localhost:8086? -c-1",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@basic-webpack/local-module": "workspace:*",
        "@basic-webpack/shared": "workspace:*",
        "@basic-webpack/shell": "workspace:*",
        "@react-aria/toast": "3.0.9",
        "@react-stately/toast": "3.1.2",
        "@squide/fakes": "workspace:*",
        "@squide/firefly": "workspace:*",
        "@squide/firefly-module-federation": "workspace:*",
        "@tanstack/react-query": "5.90.17",
        "@workleap/logging": "1.3.4",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-router": "7.12.0",
        "useless-lib": "^2.0.0"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@squide/firefly-webpack-configs": "workspace:*",
        "@swc/core": "1.15.8",
        "@swc/helpers": "0.5.18",
        "@types/react": "19.2.8",
        "@types/react-dom": "19.2.3",
        "@typescript-eslint/parser": "8.53.0",
        "@workleap/browserslist-config": "2.1.5",
        "@workleap/eslint-configs": "1.1.9",
        "@workleap/swc-configs": "2.3.5",
        "@workleap/typescript-configs": "3.0.7",
        "browserslist": "4.28.1",
        "copyfiles": "2.4.1",
        "eslint": "9.39.2",
        "http-server": "14.1.1",
        "typescript": "5.9.3",
        "typescript-eslint": "8.53.0",
        "webpack": "5.104.1",
        "webpack-cli": "6.0.1",
        "webpack-dev-server": "5.2.3"
    }
}
