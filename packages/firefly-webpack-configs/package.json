        "@typescript-eslint/parser": "8.53.1",
        "@workleap/eslint-configs": "1.1.10",
        "@workleap/rslib-configs": "1.1.5",
        "@workleap/typescript-configs": "3.0.7",
        "eslint": "9.39.2",
        "typescript": "5.9.3",
        "typescript-eslint": "8.53.1",
        "vitest": "4.0.17",
        "webpack": "5.104.1",
        "webpack-dev-server": "5.2.3"
    }
