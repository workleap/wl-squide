        "webpack-dev-server": "^5.2.3"
    },
    "dependencies": {
        "@module-federation/enhanced": "0.11.4",
        "@workleap/webpack-configs": "^1.6.5",
        "deepmerge": "^4.3.1",
        "html-webpack-plugin": "^5.6.6",
        "semver": "^7.7.3"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@rsbuild/core": "1.7.2",
