{
    "name": "@squide/firefly-rsbuild-configs",
    "author": "Workleap",
    "version": "2.1.2",
    "description": "Rsbuild configuration helpers for the Squide firefly technology stack.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-squide.git",
        "directory": "packages/firefly-rsbuild-configs"
    },
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "src",
        "dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "dev": "rslib build --watch --config ./rslib.dev.ts",
        "build": "rslib build --config ./rslib.build.ts",
        "eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "test": "vitest --config vitest.config.ts --no-watch"
    },
    "peerDependencies": {
        "@rsbuild/core": "^1.5.13",
        "@rspack/core": "^1.5.8"
    },
    "dependencies": {
        "@module-federation/enhanced": "0.11.4",
        "@module-federation/rsbuild-plugin": "0.11.4",
        "@workleap/rsbuild-configs": "^3.1.0",
        "deepmerge": "^4.3.1",
        "semver": "^7.7.3"
    },
    "devDependencies": {
        "@rsbuild/core": "1.5.13",
        "@rslib/core": "0.15.0",
        "@rspack/core": "1.5.8",
        "@types/node": "24.7.0",
        "@types/semver": "7.7.1",
        "@typescript-eslint/parser": "8.46.0",
        "@workleap/eslint-plugin": "3.5.0",
        "@workleap/rslib-configs": "1.1.0",
        "@workleap/typescript-configs": "3.0.4",
        "eslint": "8.57.0",
        "typescript": "5.9.3",
        "vitest": "3.2.4"
    },
    "engines": {
        "node": ">=21.1.0"
    }
}
